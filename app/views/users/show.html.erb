<div class="container px-5">
  <div class="row">
    <div class="col-md-3">

      <h2>User info</h2>
      <%= image_tag @user.get_profile_image(100,100) %>
      <table class="table">
        <tr>
          <td><b>name</b></td>
          <td><b><%= @user.name %></b></td>
        </tr>
        <tr>
          <td><b>introduction</b></td>
          <td><b><%= @user.introduction %></b></td>
        </tr>
      </table>
      <div class="row">
        <% if @user == current_user %>
          <%= link_to "編集", edit_user_path(@user), class: "btn btn-outline-secondary btn-block" %>
        <% end %>
      </div>

      <h1>New book</h1>
      <% if @book.errors.any? %>
        <%= pluralize(@book.errors.count, "error") %> prohibited this obj from being saved:
        <ul>
          <% @book.errors.full_messages.each do |messege| %>
            <li><%= messege %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @book do |f| %>
        <h4>Title</h4>
        <%= f.text_field :title %>
        <h4>Opinion</h4>
        <%= f.text_area :body %><br>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>

  <%= render 'books/list', books: @books, user: @user %>
  </div>
</div>
