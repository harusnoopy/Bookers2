<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'user_info', book: @book, user: @current_user %>

  <div class="col-md-8 offset-md-1">
  <h2>Users</h2>
  <table class="table">
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

    <% @users.each do |user| %>
    <tr>
      <td>
        <%= image_tag user.get_profile_image(80,80) %>
      </td>
      <td>
        <p><%= user.name %></p>
      </td>
      <td>
        <%= link_to users_path(user.id) do %>
          <p>Show</p>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
  </div>
  </div>
</div>