<div class="container">
  <div class="row">
    <div class="col-md-12 mx-auto">
      <h2>User info</h2>

      <% if @user.errors.any? %>
        <%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |messege| %>
            <li><%= messege %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="user_nane">Name</label>
          <%= f.text_field :name %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= f.file_field :profile_image, accept: "image/*" %>
        </div>
        <div>
          <label for="user_introduction">Introduction</label>
          <%= f.text_area :introduction %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>