<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
  <table class="table">
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
    <% books.each do |book| %>
    <tr>
      <td>
        <%= link_to user_path(book.user_id) do %>
          <%= image_tag book.user.get_profile_image(80,80) %>
        <% end %>
      </td>
      <td>
        <%= link_to book_path(book.id) do %>
          <p><%= book.title %></p>
        <% end %>
      </td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </table>
</div>