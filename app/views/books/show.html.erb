<p id="notice">
  <%= notice %>
</p>

<div class="container">
  <div class="row">

    <%= render 'users/user_info', book: @book, user: @user %>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tr>
          <td>
            <%= link_to user_path(@book.user_id) do %>
              <%= image_tag @book.user.get_profile_image(80,80) %><br>
              <p><%= @book.user.name %></p>
            <% end %>
          </td>
          <td>
            <%= link_to book_path(@book.id) do %>
              <p><%= @book.title %></p>
            <% end %>
          </td>
          <td><%= @book.body %></td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
            <% end %>
          </td>
          <td>
            <% if @book.user == current_user %>
              <%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-danger", "data-confirm" => "Are you sure?" %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>
